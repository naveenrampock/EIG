/* You can add global styles to this file, and also import other style files */

a{
	color: #000 !important;
}

li{
	width: 50% !important;
}

.justifier{
	padding: 20px;
}

.app-heading{
	text-align: center;
	font-size: 32px;
	margin-top: 30px;
}

.app-heading-tech{
	font-size: 13px;
}

.app-author{
	text-align: center;
	font-size: 20px;	
}

app-root{
	height: 100%;
	width: 100%;
}
.app-screen{
	background-color: #fff;
}

.login-screen{
	margin: 70px 35px;
	color: #000 !important;
}

.user-registration{
	background-color: rgba(80, 208, 193, 0.51);
}

.submit-btn{
	background-color: #fff;
	color: #000;
}
/*home*/
.header{
	background-color: #2d4c11;
    margin-bottom: 5px;
    box-shadow: 0px 1px 10px 1px rgba(0, 0, 0, 0.32);
    padding: 5px 0px;
}

.welcome-user{
	padding: 0px 15px;
    color: #444444;
}

.welcome-user span{
    font-size: 16px;
    color:#fff;
}

.home-navigation {
	float: right;
}

.home-navigation ul{
	display: inline-flex;
    list-style-type: none;
}


.chat-body{
	width: 100%;
	padding: 0px;
}

.massege-container{
    background-color: #084FA1;
}

.opposite-user{
    background-color: #2d4c11;
    width: 100%;
    color: #fff;
    text-align: center;
}
.contacts{
    background-color: #2d4c11;
    width: 100%;
    color: #fff;
    text-align: center;padding: 10px;
}

.message-thread{
	overflow: auto;
	list-style-type: none;
	height: 487px;
	width: 100%;
    border: solid 0px #2d4c11;
    margin: 0px !important;
    padding: 5px !important;
    border-left:1px solid #fff;
}

.message-thread li{
    border-color: solid 0.5px rgba(0, 0, 0, 0.32);
    clear: both;
    text-decoration: none;
    list-style-type: none;
    margin: 10px 10px 0px 20px;
    float: left;
    display: inline-block;
    margin-right: 20px;
    padding: 10px 15px;
    min-width: 350px;
    min-height: 10px;
    max-width: 400px;
    border-radius: 5px;
    box-shadow: 0px 3px 3px rgba(172, 172, 172, 0.73);
    background-color: #d9d9d9;
    line-height: 1.4;
    word-wrap: break-word;
    color: #444444;
    text-align: left; 
}

.align-right{
	float: right !important;
	text-align: right;
}
.message-thread li p{margin-bottom:0px;width:95%;position: relative;bottom: 5px;min-height: 25px;}
.message-thread li button{display:none;}
.message-thread li i{display:block !important;float: right !important; position: relative;
    left: 10px;bottom:5px;cursor:pointer;}
.message-thread li.align-right button{display:block !important;float: right !important;}
.message-thread li.align-right i{display:block !important;float: right !important; position: relative;
    left: 10px;bottom:5px;cursor:pointer;}

.message-typer{
	padding-top: 20px; border: 1px solid #2d4c11;
}


.user-list{
	padding: 10px;
	overflow-y: auto;
	height: 444px;
	width: 100%;
    background-color: #084FA1;
}

.user-list li{
    background-color: rgba(255, 255, 255, 0.70);
	padding: 8px 15px;
	list-style-type: none;
	margin-bottom: 5px;
    color: #444444;
    width: 100% !important;
    border-radius: 5px;
    box-shadow: 0px 3px 3px rgba(172, 172, 172, 0.73);
    line-height: 1.4;;
    border-color: solid 0.5px rgba(0, 0, 0, 0.32);
    clear: both;
    text-decoration: none;
    cursor: pointer;
}

.selected-user{
	border-left: solid 3px rgb(2, 39, 35);
}

.overlay{
    height: 100% !important;
    width: 100% !important;
    background-color: rgba(255, 255, 255, 0.82);
    position: absolute;
    z-index: 1;
    text-align: center;
    padding-top: 200px;
}

.overlay-display{
    display: none;
}

.online{ 
    display: inline-block;
    width: 8px;
    height: 8px;
    background: #2d4c11;
    border-radius: 50%;
    float: right;
    margin-top: 6px;
}
.offline{ 
    display: inline-block;
 width: 8px;
 height: 8px;
 background: grey;
 border-radius: 50%;
 float: right;
 margin-top: 6px;
}
.message-thread > li > span{position: relative;left: 80%;top: 30px;font-size: 12px;}

.chat-del{position: absolute;top: 0%;right: 25px;}

.chat-del .fa-trash-o{color:#fff;font-size:16px;cursor:pointer;}

.contact-search{padding: 15px;background-color: #084FA1;}

.contact-search input{width: 100%;height: 30px;}

.fa-search{position: absolute;right: 25px;top: 23px;}

.notifications{background-color: #084FA1;padding: 10px;border-top: 1px solid #fff;border-bottom: 1px solid #fff;text-align: center;}

.notifications a{color:#fff !important;cursor:pointer;}

.user-list-wrapper{border-right:1px solid #fff;}

.chat-contact{position: absolute;top: 13%;right: 25px;}

#Notifications {
    background-color: #084FA1;
    height: 591px;
    border: 1px solid #fff;
    padding: 20px 15px;
    position: relative;
    top: -1px;
}

#Notifications > div {
    margin-bottom: 10px;
}

.hw40 {
    height: 40px;
    width: 40px;
}
.p-b15 {
    padding-bottom: 15px;
}

:host /deep/ .ui-dialog.ui-widget .ui-dialog-titlebar {
    padding: 0.5em 1em;
}

:host /deep/ .ui-datalist .ui-datalist-data li{padding:10px 15px 10px 15px;border-bottom:1px solid #d9d9d9;min-height:60px;}

:host /deep/ .ui-datalist .ui-datalist-data li:last-child(){border-bottom:0px solid #d9d9d9;}

:host /deep/ .ui-datalist .ui-datalist-data li a{float:left;}

:host /deep/ .ui-datalist .ui-datalist-data li p{padding-left:11%;}

.pos-b10{position: relative;bottom:10px;}

:host /deep/ .ui-datalist-data{max-height: 430px;overflow: auto;}

.msg_datetime{position: relative;top: 5px;left: 60%;display: initial;}