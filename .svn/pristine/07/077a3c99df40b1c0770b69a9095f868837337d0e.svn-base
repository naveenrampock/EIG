.nav-user-photo {
    max-width: 40px;
    border-radius: 100%;
    position: absolute;
    top: 0px;
    cursor: pointer;
}
.clearFix
{
    clear:both;
}
 .wordbreak{
     word-wrap: break-word;
 }
 button:disabled{
     cursor: not-allowed;
 }
.errorMessage, .required {
    color: red;font-size:12px;
}

#PatientInfo ul li{padding:2px 2%;width:25%;text-align: center;}

#PatientInfo ul li.active{background-color:#084FA1;}

#PatientInfo ul li.active a{color:#fff;}

.tab-content>.active{opacity:1;}

select, input[type="text"], input[type="date"] { height: 28px;border-radius:0px;}

.tab-content label{font-weight:bold;}

.mr-15{margin-right:15%;}

.list-group-item.active{color:#fff !important;}

@media only screen and (min-width : 320px) and (max-width : 480px){
#UserSetting ul li {padding: 5px 2%;}
}
@media only screen and (min-width : 481px) and (max-width : 767px){
#UserSetting ul li {padding: 5px 2%;}
}